<div class="container p-4">
  <div class="mb-5" id="team-carousel">
    <p>Participating teams</p>
    <br>
    <div class="teams-carrousel">
      <% @teams.each do |team| %>
        <div class="carousel_card">
          <div>
          <%= image_tag "#{team.team_tag}-logo.png", class: "team-logo-img" %>
          <%= link_to team.team_name.titleize, team_path(team), class: "team-name"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <br>
  <div class="contaier p-4">
  <h2>Top 3 Teams</h2>
  <p><strong>According to matches, avg views and avg likes per match</strong></p>
  <br>
    <div class="card-deck">
      <% @top_teams.each_with_index do |team, i| %>
        <div class="card" style="width: 18rem; box-shadow: 0 20px 50px rgba(0,0,0,0.8)">
          <%= image_tag "team_banner/#{team[:team_tag]}-banner.png", class: "card-img-top"%>
          <div class="card-body">
            <h2 class="card-title text-center"><%="#{i+1}ยบ #{team[:team].upcase}"%></h2>
            <hr style="border-color: #72BFC9; border-width: 2px 0"/>
            <h4 class="card-text text-center"><%= team[:matches] %> matches</h4>
            <h4 class="card-text text-center"><%= number_with_delimiter(team[:avg_views]) %> avg. views</h4>
            <h4 class="card-text text-center"><%= number_with_delimiter(team[:avg_likes]) %> likes per match </h4>
            <br>
            <%= link_to "#{team[:team].capitalize} page", team_path(team[:team_id]), class:"btn btn-outline-secondary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <br>

  <div class="mb-5" id="top-audience-teams">
    <h2>Top Teams in Avg. Audience</h2>
    <p><strong>Avg. viwers per game, seasons 2019 and 2020</strong></p>
    <%= line_chart @top_audience_avg, thousands: ",", colors: ["#72BFC9", "white"] %>
  </div>

  <br>

  <div class="mb-5" id="top-like-teams">
    <h2>Top Teams in Video Likes</h2>
    <p><strong>Avg. YouTube likes per game, seasons 2019 and 2020</strong></p>
    <%= bar_chart @top_likes_avg, thousands: ",", colors: ["#72BFC9", "white"] %>
  </div>

  <br>

  <div id="top-comment-teams">
    <h2>Top Teams in Video Comments</h2>
    <p><strong>Avg. YouTube comments per game, seasons 2019 and 2020</strong></p>
    <%= bar_chart @top_comment_avg, thousands: ",", colors: ["#72BFC9", "white"] %>
  </div>

  <br>

</div>
