<div class="container p-4">
  <div id="team-carousel">
    <h4>Participating teams</h4>
    <br>
    <div class="teams-carrousel">
      <% @teams.each do |team| %>
        <div class="carousel_card">
          <div>
            <%= image_tag "#{team.team_tag}-logo.png", class: "team-logo-img" %>
            <%= link_to team.team_name.titleize, team_path(team), class: "team-name"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <div class="row pr-5 pl-5" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1588007374946-c79543903e8a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80); background-size: cover ">
    <div class="col-8 p-5" style="color: white">
      <h1><strong><%= @team.team_long_name.titleize %></strong></h1>
      <p>Data collected from casting videos on YouTube</p>
      <br>
      <div class="info_cards_grid">
        <div class="card">
          <h5><strong>Broadcasts</strong></h5>
          <p><%= @banner[:matches] %></p>
        </div>
        <div class="card">
          <h5><strong>Total Views</strong></h5>
          <p><%= number_with_delimiter(@banner[:views]) %></p>
        </div>
        <div class="card">
          <h5><strong>Avg. Views per Match</strong></h5>
          <p><%= number_with_delimiter(@banner[:views_match]) %></p>
        </div>
        <div class="card">
          <h5><strong>Video Likes</strong></h5>
          <p><%= number_with_delimiter(@banner[:likes]) %></p>
        </div>
        <div class="card">
          <h5><strong>Video Comments</strong></h5>
          <p><%= number_with_delimiter(@banner[:comments]) %></p>
        </div>
        <div class="card">
          <h5><strong>Video Dislikes</strong></h5>
          <p><%= number_with_delimiter(@banner[:dislikes]) %></p>
        </div>
      </div>
    </div>
    <div class="col-4 d-flex justify-content-center align-items-center">
      <%= image_tag "#{@team.team_tag}-logo.png", class: "team-logo-big" %>
    </div>
  </div>

<div class="container p-4">
  <br>

  <div id="last-5-audiences-chart">
    <h2>Last 5 matches audiences</h2>
    <%= bar_chart @last_5, thousands: ",", colors: ["#72BFC9", "white"] %>
  </div>

  <br>

  <div id="top-audience-table">
    <h2>Top 5 Audiences</h2>
    <table class="table" style="text-align: center">
        <thead>
          <tr>
            <th>Tournament</th>
            <th colspan="3">Match</th>
            <th>Views</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @top_5.each do |i|  %>
          <tr>
            <td><%= i[:tournament] %></td>
            <td><%= i[:team_blue].capitalize %></td>
            <td>vs.</td>
            <td><%= i[:team_red].capitalize %></td>
            <td><%= number_with_delimiter(i[:views]) %></td>
            <td><%= i[:date] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>

  <br>
</div>
